# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/inzassa

# Google Analytics ID (format: G-XXXXXXXXXX)
GOOGLE_ANALYTICS_ID=

# Google AdSense ID (format: ca-pub-XXXXXXXXXXXXXXXX)
GOOGLE_ADSENSE_ID=

# LibreTranslate API URL (free translation service)
# Default: https://libretranslate.com (public instance)
# Self-hosted: http://localhost:5000
LIBRETRANSLATE_URL=https://libretranslate.com

# Translation delay between requests in milliseconds (default: 500)
# Increase if hitting rate limits
TRANSLATION_DELAY_MS=500

# OpenAI API key for content reformulation (optional)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI model to use (default: gpt-3.5-turbo)
# Options: gpt-3.5-turbo, gpt-4, gpt-4-turbo
OPENAI_MODEL=gpt-3.5-turbo

# Enable AI reformulation to avoid plagiarism (default: false)
# Set to 'true' to enable (requires OPENAI_API_KEY)
REFORMULATION_ENABLED=false

# Logging level (default: info)
# Options: error, warn, info, debug
LOG_LEVEL=info

# Cron schedule for automated collection (default: every 2 hours)
# Format: minute hour day month weekday
# Examples:
#   '0 * * * *'      - Every hour
#   '0 */2 * * *'    - Every 2 hours
#   '0 0 * * *'      - Every day at midnight
#   '0 8,12,18 * * *' - Three times a day (8am, 12pm, 6pm)
CRON_SCHEDULE=0 */2 * * *

# Timezone for cron jobs (default: Africa/Dakar)
TIMEZONE=Africa/Dakar

# Run collection immediately on scheduler startup (default: true)
# Set to 'false' to wait for first scheduled time
RUN_ON_STARTUP=true
